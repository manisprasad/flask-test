{
  "manifest_version": 3,
  "name": "Grammerly",
  "description": "Chrome Setup.",
  "version": "1.0.0",
  "icons": {
    "16": "image.png",
    "32": "image.png",
    "48": "image.png",
    "128": "image.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Setup",
    "default_icon": "image.png"
  },

 
   "permissions": ["clipboardWrite", "scripting", "activeTab", "localStorage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}